<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/md_theme_light_background</item>
    </style>

    <style name="DialogSlideAnim">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>
    
    <style name="RunesSlieAnim">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
    </style>
</resources>