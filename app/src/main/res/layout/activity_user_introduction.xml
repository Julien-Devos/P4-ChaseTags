<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserIntroductionActivity"
    android:paddingStart="30dp"
    android:paddingEnd="30dp" >

    <TextView
        android:id="@+id/page_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="@string/page_number"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_counter"
        app:layout_constraintVertical_bias="0.2"
        android:src="@drawable/home_logo"
        android:contentDescription="@string/app_logo"
        tools:ignore="VisualLintBounds" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_counter"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/signing_in_illustration"
        android:contentDescription="@string/app_logo"
        tools:ignore="VisualLintBounds"
        android:visibility="invisible"  />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_counter"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/settings_illustration"
        android:contentDescription="@string/app_logo"
        tools:ignore="VisualLintBounds"
        android:visibility="invisible"  />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_counter"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/play_with_friends"
        android:contentDescription="@string/app_logo"
        tools:ignore="VisualLintBounds"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_counter"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/qr_code_illustration"
        android:contentDescription="@string/app_logo"
        tools:ignore="VisualLintBounds"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.57"
        android:text="@string/tutorial_title_1"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/tutorial_desc_3"
        android:textSize="18sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/back_button"
        app:icon="@drawable/baseline_navigate_before_24"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize"
        android:visibility="invisible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/next_button"
        app:icon="@drawable/baseline_navigate_next_24"
        app:iconGravity="textEnd"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintButtonSize" />


</androidx.constraintlayout.widget.ConstraintLayout>